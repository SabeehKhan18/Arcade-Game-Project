package Characters;

import java.awt.Color;
import java.awt.Graphics2D;
import java.awt.Rectangle;

import Game.Game;
import Helpers.RandomHelper;
import Weapons.Blaster;
import Weapons.Lancer;
import Weapons.RYNO;

public class Spider extends Movable {

	private int initY, x, y, diagHeight, speed;
	private final Color BODYCOLOR;
	private boolean moveRight, moveDiag;
	
	public Spider(Game game) {
		super(game);
		this.BODYCOLOR = Color.blue;
		this.diagHeight = 32*5;
		this.initY = RandomHelper.randRange(800-10*32, game.getHeight());
		this.y = this.initY;
		if (RandomHelper.randBoolean()) {
			this.speed = 1;
			this.x = 0;
			this.moveRight = true;
		} else {
			this.x = game.getWidth() - 32;
			this.speed = -1;
			this.moveRight = false;
		}
		this.moveDiag = true;
	}
	
	@Override
	public void tick() {
		// Auto-generated method stub.
		this.move();
	}
	
	public void move() {
		if (this.moveDiag) {
			this.x += this.speed;
			this.y -= 1;
			if (this.initY - this.y >= this.diagHeight) {
				this.moveDiag = false;
			}
		} else {
			this.y += 1;
			if (this.y >= this.initY)
				this.moveDiag = true;
		}
		
	}

	@Override
	public void render(Graphics2D g) {
		// Auto-generated method stub.
		g.setColor(BODYCOLOR);
		g.fillRect(this.x, this.y, 32, 32);
	}


	@Override
	public Rectangle getBounds() {
		// TODO Auto-generated method stub.
		return new Rectangle(this.x, this.y , 32, 32);
	}

	@Override
	public void collide(Movable m) {
		// TODO Auto-generated method stub.
		m.collideWithSpider(this);
	}

	@Override
	public void collideWithPlayer(Player p) {
		p.die();
	}

	@Override
	public void collideWithMushroom(Mushroom m) {
		// TODO Auto-generated method stub.
		if (m.canKill()) {
			m.die();
		}
	}

	@Override
	public void collideWithCentipede(Centipede c) {
		// nothing to do here
		
	}


	@Override
	public void collideWithScorpion(Scorpion s) {
		// nothing to do here		
	}

	@Override
	public void collideWithSpider(Spider sp) {
		// Nothing to do here
	}

	@Override
	public void collideWithRYNO(RYNO r) {
		this.die();
	}

	@Override
	public void collideWithBlaster(Blaster b) {
		// TODO Auto-generated method stub.
		this.die();
	}
	
	@Override
	public void collideWithLancer(Lancer s) {
		// TODO Auto-generated method stub.
		this.die();
	}


}
